{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**", "public/dist/**"],
      "dependsOn": ["^build"],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "JWT_SECRET",
        "SESSION_SECRET",
        "APP_URL",
        "API_BASE_URL",
        "NEXT_PUBLIC_API_BASE_URL",
        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_SITE_ENABLED",
        "NEXT_PUBLIC_VERCEL_ENV",
        "NEXT_PUBLIC_UMAMI_WEBSITE_ID"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "DB_HOST",
        "DB_USER",
        "DB_PASSWORD",
        "DB_NAME",
        "DB_PORT",
        "DATABASE_URL",
        "REDIS_HOST",
        "REDIS_PORT",
        "REDIS_URL",
        "API_PORT",
        "WEB_PORT",
        "APP_URL",
        "API_BASE_URL",
        "NEXT_PUBLIC_API_BASE_URL",
        "CORS_ORIGINS",
        "JWT_SECRET",
        "JWT_ACCESS_TOKEN_EXPIRES_IN",
        "JWT_REFRESH_TOKEN_EXPIRES_IN",
        "SESSION_SECRET",
        "NEXT_PUBLIC_VERCEL_ENV",
        "NEXT_PUBLIC_APP_URL",
        "NEXT_PUBLIC_SITE_ENABLED",
        "RESEND_API_KEY",
        "EMAIL_FROM",
        "MAX_FILE_SIZE",
        "UPLOAD_PATH",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "GOOGLE_CALLBACK_URL",
        "S3_ACCESS_KEY",
        "S3_SECRET_KEY",
        "S3_BUCKET_NAME",
        "S3_ENDPOINT",
        "S3_PUBLIC_URL",
        "SMS_API_KEY",
        "SMS_API_SECRET",
        "AUTO_MIGRATE",
        "DOCKER_ENV",
        "NEXT_PUBLIC_UMAMI_WEBSITE_ID"
      ]
    },
    "start": {
      "cache": false,
      "dependsOn": ["build"],
      "env": [
        "NODE_ENV",
        "DATABASE_URL",
        "JWT_SECRET",
        "SESSION_SECRET",
        "API_PORT",
        "WEB_PORT",
        "APP_URL",
        "API_BASE_URL",
        "NEXT_PUBLIC_API_BASE_URL",
        "NEXT_PUBLIC_APP_URL",
        "CORS_ORIGINS",
        "REDIS_URL",
        "AUTO_MIGRATE",
        "DOCKER_ENV"
      ]
    },
    "start:dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NODE_ENV",
        "DB_HOST",
        "DB_USER",
        "DB_PASSWORD",
        "DB_NAME",
        "DB_PORT",
        "DATABASE_URL",
        "REDIS_HOST",
        "REDIS_PORT",
        "REDIS_URL",
        "API_PORT",
        "WEB_PORT",
        "APP_URL",
        "API_BASE_URL",
        "NEXT_PUBLIC_API_BASE_URL",
        "CORS_ORIGINS",
        "JWT_SECRET",
        "JWT_ACCESS_TOKEN_EXPIRES_IN",
        "JWT_REFRESH_TOKEN_EXPIRES_IN",
        "SESSION_SECRET",
        "RESEND_API_KEY",
        "EMAIL_FROM",
        "MAX_FILE_SIZE",
        "UPLOAD_PATH",
        "GOOGLE_CLIENT_ID",
        "GOOGLE_CLIENT_SECRET",
        "GOOGLE_CALLBACK_URL",
        "S3_ACCESS_KEY",
        "S3_SECRET_KEY",
        "S3_BUCKET_NAME",
        "S3_ENDPOINT",
        "S3_PUBLIC_URL",
        "SMS_API_KEY",
        "SMS_API_SECRET",
        "AUTO_MIGRATE",
        "DOCKER_ENV"
      ]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": [],
      "env": ["NODE_ENV", "DATABASE_URL"]
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "dependsOn": ["^build"],
      "cache": false
    },
    "type-check": {
      "cache": true,
      "dependsOn": ["^build"]
    },
    "clean": {
      "cache": false
    }
  },
  "remoteCache": {
    "enabled": true
  }
}
