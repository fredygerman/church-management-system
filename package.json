{
  "name": "church-management-system",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.12.3",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "turbo start",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "type-check": "turbo type-check",
    "format": "prettier --write \"**/*.{ts,tsx,js,json,md}\"",
    "clean": "turbo clean && rimraf --glob **/node_modules **/dist **/.next pnpm-lock.yaml **/.tsbuildinfo",
    "web:dev": "pnpm --filter web dev",
    "web:build": "pnpm --filter web build",
    "api:dev": "pnpm --filter api dev",
    "api:build": "pnpm --filter api build",
    "db:generate": "pnpm --filter @church/db db:generate",
    "db:push": "pnpm --filter @church/db db:push",
    "db:migrate": "pnpm --filter @church/db db:migrate",
    "db:seed": "pnpm --filter @church/db db:seed",
    "db:studio": "pnpm --filter @church/db db:studio"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.12.2",
    "@typescript-eslint/parser": "^8.12.2",
    "eslint": "^8",
    "prettier": "^3.3.3",
    "rimraf": "^6.0.1",
    "turbo": "latest",
    "typescript": "^5"
  }
}
